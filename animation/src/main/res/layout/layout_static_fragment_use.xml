<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.heshun.canvasdemo.customerView.drawable.DrawableView
        android:id="@+id/dv_readBall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_dont"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="#f1a2a2"
        />

    <ImageView
        android:id="@+id/iv_fish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#cde7ec"
        />


    <fragment
        android:id="@+id/fragment_1"
        android:name="com.heshun.canvasdemo.FragmentIconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>